<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(Layout.MainLayout)">
                <NotAuthorized>
                    <div class="container mt-5">
                        <div class="alert alert-info shadow-sm text-center" role="alert">
                            <h4 class="alert-heading">🔒 Zutritt geschützt</h4>
                            <p>Um deine Finanzen und Gläubiger zu verwalten, musst du dich anmelden.</p>
                            <hr>
                            <a href="Identity/Account/Login" class="btn btn-primary">Jetzt Anmelden</a>
                            <a href="Identity/Account/Register" class="btn btn-outline-secondary ms-2">Registrieren</a>
                        </div>
                    </div>
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(Layout.MainLayout)">
                <p role="alert">Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
@page "/"
@using Microsoft.EntityFrameworkCore
@using System.Security.Claims
@using FinanceTracker.Data
@using FinanceTracker.Models
@inject AppDbContext DbContext
@inject AuthenticationStateProvider AuthProvider
@inject NavigationManager Nav

<PageTitle>FinanceTracker - Home</PageTitle>

<div class="container mt-4">
    <AuthorizeView>
        @* --- ANSICHT FÜR EINGELOGGTE NUTZER --- *@
        <Authorized>
            <h2 class="mb-4">Willkommen zurück, @context.User.Identity?.Name! 👋</h2>

            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm bg-success text-white" @onclick='() => Nav.NavigateTo("/debts")' style="cursor: pointer;">
                        <div class="card-body d-flex flex-column justify-content-center text-center">
                            <h6 class="text-uppercase opacity-75 small fw-bold">Ich bekomme noch</h6>
                            <h1 class="display-5 fw-bold">@totalIget.ToString("C")</h1>
                            <i class="bi bi-arrow-right-circle mt-2"></i>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm bg-danger text-white">
                        <div class="card-body d-flex flex-column justify-content-center text-center">
                            <h6 class="text-uppercase opacity-75 small fw-bold">Ich schulde anderen</h6>
                            <h1 class="display-5 fw-bold">@totalIowe.ToString("C")</h1>
                            <small>Bestätigte Beträge</small>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm @(pendingRequestsCount > 0 ? "bg-warning text-dark" : "bg-light text-muted")"
                         @onclick='() => Nav.NavigateTo("/debts")' style="cursor: pointer;">
                        <div class="card-body d-flex flex-column justify-content-center text-center">
                            <h6 class="text-uppercase small fw-bold">Offene Anfragen</h6>
                            <h1 class="display-5 fw-bold">@pendingRequestsCount</h1>
                            @if (pendingRequestsCount > 0)
                            {
                                <span class="badge bg-dark">Aktion erforderlich!</span>
                            }
                            else
                            {
                                <span>Alles aktuell</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-5">
                <h4>Schnellzugriff</h4>
                <div class="list-group shadow-sm">
                    <button class="list-group-item list-group-item-action d-flex justify-content-between align-items-center p-3" @onclick='() => Nav.NavigateTo("/debts")'>
                        <div>
                            <i class="bi bi-people-fill me-2 text-primary"></i>
                            Schulden & Forderungen verwalten
                        </div>
                        <i class="bi bi-chevron-right"></i>
                    </button>
                </div>
            </div>
        </Authorized>

        @* --- ANSICHT FÜR GÄSTE (NICHT EINGELOGGT) --- *@
        <NotAuthorized>
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="bi bi-wallet2 text-primary" style="font-size: 4rem;"></i>
                </div>
                <h1 class="display-4 fw-bold">FinanceTracker</h1>
                <p class="lead text-muted mb-5">
                    Verwalte deine Finanzen, behalte den Überblick über geliehenes Geld
                    und organisiere deine monatlichen Fixkosten an einem zentralen Ort.
                </p>
                <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                    <a href="Identity/Account/Login" class="btn btn-primary btn-lg px-4 gap-3">Anmelden</a>
                    <a href="Identity/Account/Register" class="btn btn-outline-secondary btn-lg px-4">Konto erstellen</a>
                </div>

                <div class="row mt-5 g-4 text-start">
                    <div class="col-md-4">
                        <h5><i class="bi bi-shield-check text-success"></i> Sicher & Lokal</h5>
                        <p class="small text-muted">Deine Daten liegen sicher in einer lokalen SQLite-Datenbank.</p>
                    </div>
                    <div class="col-md-4">
                        <h5><i class="bi bi-people text-info"></i> Social Tracking</h5>
                        <p class="small text-muted">Verknüpfe Schulden direkt mit Freunden & Familie und behalte den Status im Blick.</p>
                    </div>
                    <div class="col-md-4">
                        <h5><i class="bi bi-graph-up text-primary"></i> Übersicht</h5>
                        <p class="small text-muted">Ein smartes Dashboard zeigt dir sofort, wer dir noch was schuldet.</p>
                    </div>
                </div>
            </div>
        </NotAuthorized>
    </AuthorizeView>
</div>

@code {
    private decimal totalIget = 0;
    private decimal totalIowe = 0;
    private int pendingRequestsCount = 0;
    private string? currentUserId;
    private string? currentUserEmail;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthProvider.GetAuthenticationStateAsync();
        currentUserId = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
        currentUserEmail = authState.User.Identity?.Name;

        if (currentUserId != null)
        {
            // 1. Was ich bekomme (Erst Liste laden, dann im Speicher summieren)
            var claims = await DbContext.Debts
                .Where(d => d.CreditorUserId == currentUserId && d.Status != DebtStatus.Paid)
                .ToListAsync();
            totalIget = claims.Sum(d => d.Amount - d.PaidAmount);

            // 2. Was ich schulde
            var debts = await DbContext.Debts
                .Where(d => d.DebtorEmail == currentUserEmail && d.Status == DebtStatus.Confirmed)
                .ToListAsync();
            totalIowe = debts.Sum(d => d.Amount - d.PaidAmount);

            // 3. Offene Anfragen (Count geht bei SQLite, da es ein Integer ist)
            pendingRequestsCount = await DbContext.Debts
                .CountAsync(d => d.DebtorEmail == currentUserEmail && d.Status == DebtStatus.Pending);
        }
    }
}